<h1>Create Stockist Profile</h1>


<article class="form-container">
  <%= simple_form_for(@stockist, as: :stockist, method: :post, url: profiles_stockist_path) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :business_name %>
    <%= f.input :abn %>

    <%= f.simple_fields_for :addresses do |a| %>
      <%= a.input :address_line1 %>
      <%= a.input :address_line2 %>
      <%= a.input :suburb %>  
      <%= a.input :state, as: :radio_buttons, collection: ['ACT', 'NSW', 'NT', 'QLD', 'SA', 'TAS', 'VIC', 'WA'], wrapper: :vertical_collection_inline, class: 'custom-control-input' %>
      <%= a.input :postcode %>
    <% end %>

		<%= f.simple_fields_for :brands do |a| %>
			<%= a.input :brand %>
		<%end%>	
  </div>

  <div>
    <%= f.button :submit, 'Save', class: 'btn btn-light' %>
  </div>
  <% end %>
</article>
