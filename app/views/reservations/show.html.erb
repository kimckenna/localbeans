<article class="show-listing-container">
<div class="card mb-3 border-0 custom-card" style="width: 60%; max-width: 800px; background-color: #FFFBF8;">
  <div class="row no-gutters">
    <div class="col-md-5">
      <div>
        <%= @listing.images.attached? ? (image_tag @listing.images.first , alt:'Stockist Image', class:'img-fluid width: 100% \5 rounded mx-auto d-block card-img-top') : (image_tag 'coffee_default.jpeg', alt:'Default Image', class:'img-fluid width: 100% \5 rounded mx-auto d-block card-img-top') %>
      </div>
    </div>
    <div class="col-md-7">
      <div class="card-body">
				<h3 class="card-title title"><%= "Thank you!" %></h3>
        <ul class="card-text">
					<li class="listing_show_li">Reservation: #R<%=@new_reservation.id%></li></br>
					<li class="listing_show_li">Reserved on: <%=@new_reservation.created_at.in_time_zone%></li></br>
					<li class="listing_show_li"><h5><%= @listing.name %></h5></li>
					<li class="listing_show_li"><%= @listing.brand.brand %></li>
					<li class="listing_show_li"><%= @listing.bean_type %> </li>
          <li class="listing_show_li"><%= @listing.roast %></li>
					<li class="listing_show_li">Grind:  <%= @grind.bean_grind %></li>
          <li class="listing_show_li">Size:  <%= @size.size %>g</li>
					<li class="listing_show_li">Reserve Price: <%= number_to_currency(@size.price) %></li></br>

					<li>Pick up:</li></br>
					<li class="listing_show_li"><h5><%= @listing.stockist.business_name %></h5></li>
					<li class="listing_show_li"><%= @listing.stockist.addresses.first.stockist_address %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
</article>
